[ALIAS]
pull = update

[DEFAULT]
# Make the status command local only
bzr_status = bzr status --short "$@"
git_sethead = git checkout "$@"
git_reset = git reset "$@"
git_describe = git describe "$@"
git_show = git show "$@"

[Projects/website]
checkout = git clone 'git.debian.org:public_git/website.git' 'website'

[Projects/Debian/apt]
checkout = git clone 'https://salsa.debian.org/apt-team/apt.git' 'apt'

[Projects/Debian/dh-autoreconf]
checkout = git clone 'https://salsa.debian.org/debian/dh-autoreconf.git' 'dh-autoreconf'

[Projects/Debian/gnu-efi]
checkout = git clone 'git+ssh://git.debian.org/git/collab-maint/gnu-efi.git' 'gnu-efi'

[Projects/Debian/gummiboot]
checkout = git clone 'git+ssh://git.debian.org/git/collab-maint/gummiboot.git' 'gummiboot'

[Projects/Debian/hardlink]
checkout = git clone 'git+ssh://git.debian.org/git/users/jak/hardlink.git' 'hardlink'

[Projects/Debian/ndiswrapper]
checkout = git clone 'git+ssh://git.debian.org/git/collab-maint/ndiswrapper.git' 'ndiswrapper'

[Projects/Debian/python-apt]
checkout = git clone 'https://salsa.debian.org/apt-team/python-apt.git' 'python-apt'

[Projects/Stable/apt-show-versions]
checkout = git clone 'git+ssh://git.debian.org/git/users/jak/apt-show-versions.git' 'apt-show-versions'

[Projects/Stable/cleanup]
checkout = git clone 'git+ssh://git.debian.org/git/users/jak/cleanup.git' 'cleanup'

[Projects/Stable/jak-meta]
checkout = git clone 'git+ssh://git.debian.org/git/users/jak/jak-meta.git' 'jak-meta'

[Projects/Stable/letterman]
